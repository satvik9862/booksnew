<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Consignment Store </title>
    <link rel="stylesheet" href="css/shop.css">
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <script crossorigin="anonymous" src="https://kit.fontawesome.com/c8e4d183c2.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;500;600;700&display=swap" rel="stylesheet">
    
    

</head>
<body>
    <nav> 

        <!--menu-bar----------------------------------------->
        <div class="navigation">
            <!--logo------------>
            <a href="/home" class="logo"><img src="..\img\logo-no-background.png"></a>
            <!--menu-icon------------->
            <div class="toggle"></div>
            <!--menu----------------->
            <ul class="menu">
                <li><form method="GET" action="/home"><button class="navButton">Home</button></form></li>
                <li  class="shop"><form method="GET" action="/shop"><button class="navButton">Shop</button></form></li>
                <li><form method="GET" action="/sell"><button class="navButton">Sell</button></form></li>
                <li><a href="/donate"><button class="navButton">Donate</button></a></li>
            
            </ul>
            <!--right-menu----------->
            <div class="right-menu">
                <a href="javascript:void(0);" class="search">
                    <i class="fas fa-search"></i>
                </a>
                <a href="/" class="">
                    <i class="far fa-user"></i>
                </a>
                <a href="/logout"><i class="fas fa-sign-out-alt"></i></a>
                
            </div>
              <!--search-bar----------------------------------->
  <div class="search-bar">
    
    <!--search-input------->
    <form method="POST" action="/search">
        <div class="search-input">
    
            <input type="text" placeholder="Search For Product" name="fsearch" required />
            <button class="navButton"  type="submit">Search</button>
       
            <!--cancel-btn--->
            <a href="javascript:void(0);" class="search-cancel">
                <i class="fas fa-times"></i>
            </a>
    

    </div>
</form>
  </div>
    <!---login-and-sign-up--------------------------------->
    <div class="form">
        <!--login---------->
        <div class="login-form">
            <!--cancel-btn---------------->
            <a href="javascript:void(0);" class="form-cancel">
                <i class="fas fa-times"></i>
            </a>
            <strong>Log In</strong>
            <!--inputs-->
            <form>
                <input type="number" number="Phone Number" placeholder="Phone Number" required>
                <input type="password" name="password" placeholder="Password" required/>
                <input type="submit" value="Log In"/>
            </form>
            <!--forget-and-sign-up-btn-->
            <div class="form-btns">
                <a href="#" class="forget">Forget Your Password?</a>
                <a href="javascript:void(0);" class="sign-up-btn">Create Account</a>
            </div>
        </div>
            <!--Sign-up---------->
            <div class="sign-up-form">
                <!--cancel-btn---------------->
            <a href="javascript:void(0);" class="form-cancel">
                <i class="fas fa-times"></i>
            </a>
                <strong>Sign Up</strong>
                <!--inputs-->
                <form>
                    <input type="text" name="fullname" placeholder="Full Name" required/>
                    <input type="number" number="Phone Number" placeholder="Phone Number" required>
                    <input type="email" name="email" placeholder="Example@gmail.com" required/>
                    <input type="text" name="College Name" placeholder="Enter you College Name" required/>
                    <input type="password" name="password" placeholder="Password" required/>
                    <input type="password" name="Confirm password" placeholder="Confirm Password" required/>
                    <input type="submit" value="Sign Up"/>
                </form>
                <!--forget-and-sign-up-btn-->
                <div class="form-btns">
                    <a href="javascript:void(0);" class="already-account">
                        Already Have Account?</a>
    
                </div>
            </div>
    </div>
  

   </div>
 </nav>
<div class="catClass" id="categoryMenu">
  <ul class="menu">
    <li><button class="navButton1">All</button></li>
    <li><form method="GET" action="/book"><button class="navButton">Fiction</button></form></li>
    <li><form method="GET" action="/nonfiction"><button class="navButton">Non-Fiction</button></form></li>
    <li><form method="GET" action="/textbook"><button class="navButton">TextBooks</button></form></li>
    <li><form method="GET" action="/other"><button class="navButton">Others</button></form></li>  
  </ul>
</div>

<div class="product-container">
    
    <% for(var i=0; i<invItemsShop.length; i++){ %>
            <div class="product-box">
                <!--product-img------------>
                <div class="product-img">
                  
                  <!--img------>
                  <a href="/productPage/<%= invItemsShop[i]._id %>"><img  src="../img/<%=invItemsShop[i].image %>" ></a>
                </div>
                <!--product-details-------->
                <div class="product-details">
                    <a  href="/productPage/<%= invItemsShop[i]._id %> " class="p-name"><%=invItemsShop[i].name  %></a>
                    <span class="p-price">Rs <%=invItemsShop[i].price  %></span>

                    <!--
                    <span class="p-con">Seller Contact: <%=invItemsShop[i].phone  %></span>
                    <span class="p-des">Description: <%=invItemsShop[i].description  %></span>
                    -->
                </div>
            </div>
    <% } %> 
            
           

        
    </div>
